<Window x:Class="WPFUIKitProfessional.Pages.DirectorFolder.EditShiftsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUIKitProfessional.Pages.DirectorFolder"
        mc:Ignorable="d"
        Title="EditShiftsWindow" Height="330" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White"
            CornerRadius="10">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>

            </Grid.RowDefinitions>
            <TextBlock Text="Редактировать данные"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Style="{StaticResource Text_Style}"
                       Margin="10" />
            <TextBlock Text="Конец смены"
                       Style="{StaticResource Text_Style}"               
                       FontSize="12"
                       Margin="20,0,0,0"
                       Grid.Row="3"/>
            <TextBox Width="140"
                      Height="23"
                      Grid.Row="3"
                      x:Name="EndDt"
                      Margin="112,22,46,22"
                        BorderBrush="Black"
                     Text="{Binding EndTimeShifts}"/>
            <TextBlock Text="Название смены"
                       Style="{StaticResource Text_Style}"
                       FontSize="12"
                       Margin="15,0,0,0"
                       Grid.Row="1"/>
            <TextBox Width="140"
                      Height="23"
                      Grid.Row="1"
                      Margin="112,22,46,22"
                      x:Name="StaffCb"
                     Text="{Binding ShiftsName}"/>
            <TextBlock Text="Начало смены"
                       Style="{StaticResource Text_Style}"
                       FontSize="12"
                       Margin="20,0,0,0"
                       Grid.Row="2"/>
            <TextBox Width="140"
                      Height="23"
                      Grid.Row="2"
                      Margin="112,22,46,22"
                      x:Name="StartDt" 
                        BorderBrush="Black"
                     Text="{Binding StartTimeShifts}"/>
            <Button Grid.Row="4"
                    Style="{StaticResource mainbutton}"
                    Content="Назад"
                    Width="120"
                    HorizontalAlignment="Left"
                    x:Name="BackBtn"
                    Click="BackBtn_Click"/>
            <Button Grid.Row="4"
                    Style="{StaticResource mainbutton}"
                    Content="Сохранить"
                    Width="140"
                    HorizontalAlignment="Right"
                    x:Name="SaveBtn"
                    Click="SaveBtn_Click"/>
            <Border Background="Transparent"
                    MouseDown="Border_MouseDown"/>
        </Grid>
    </Border>
</Window>
